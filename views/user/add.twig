{% verbatim %}
    <template id="add-user">
        <div>
            <h2>Add new user</h2>
            <form v-on:submit="createUser">
                <div class="form-group">
                    <label for="add-name">Name</label>
                    <input class="form-control" id="add-name" v-model="user.title" required/>
                </div>

                <div class="form-group">
                    <label for="add-name">Username</label>
                    <input class="form-control" id="add-name" v-model="user.username" required placeholder="Enter a Username ( Alphanumeric with hypen and underscore only)"/>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <router-link class="btn btn-default" v-bind:to="'/'">Cancel</router-link>
            </form>
        </div>
    </template>
{% endverbatim %}